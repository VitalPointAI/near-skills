{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": ["ES2022"]
  },
  "include": [
    "shared/**/*.ts",
    "transaction-history/**/*.ts",
    "indexer-query/**/*.ts",
    "address-book/**/*.ts",
    "transaction-labeler/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
